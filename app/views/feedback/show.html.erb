<%= form_with url: feedback_path, class: 'form' do |form| %>
  <div class="field">
    <%= form.label :email, t('.email'), class: 'label' %>
    <div class="control">
      <%= form.email_field :email, class: 'input' %>
    </div>
  </div>
  <div class="field">
    <%= form.label :content, t('.content'), class: 'label' %>
    <div class="control">
      <%= form.text_field :content, class: 'input' %>
    </div>
  </div>
  <div class="field">
    <div class="control">
      <%= form.submit t('.send'), class: 'button is-link' %>
    </div>
  </div>
<% end %>