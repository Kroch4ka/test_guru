<div>
  <%= t('.title') %>
</div>
<%= form_with model: [:admin, @test], class: 'form', local: true do |form| %>
  <% if @test.errors.any? %>
    <%= render 'shared/errors', resource: question %>
  <% end %>
  <%= form.label :title %>
  <%= form.text_field :title %>
  <%= form.number_field :level, in: Test::EASY_LEVELS.min..Test::HARD_LEVELS.max %>
  <%= form.collection_select(:category_id, Category.all, :id, :name, include_hidden: false, prompt: true) %>
  <%= form.submit %>
<% end %>
