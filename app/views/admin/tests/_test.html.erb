<li class="test_card">
  <h2 class="test_card__title"><%= test.title %></h2>
  <span class="test_card__level">Уровень: <%= levelize(test.level) %></span>
  <span class="test_card__count_questions">Количество вопросов: <%= test.questions.count %></span>
  <%= link_to 'Просмотреть', admin_test_path(test), class: "test_card__link link" %>
  <%= link_to 'Удалить', admin_test_path(test), method: :delete, data: {confirm: "Are you sure?"}, class: "test_card__link link"  %>
</li>
