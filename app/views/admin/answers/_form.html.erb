<%= form_heading(answer) %>
<%= form_with model: [:admin, answer], url: url, class: 'form', local: true do |form| %>
  <div class="field">
    <%= form.label :body, class: 'label' %>
    <div class="control">
      <%= form.text_field :body, class: 'input' %>
      <%= form_error_field_prompt(answer, :body) %>
    </div>
  </div>
  <div class="field">
    <div class="control is-flex">
      <%= form.check_box :correct, class: 'checkbox' %>
      <%= form.label :correct, class: 'label' %>
    </div>
    <%= form_error_field_prompt(answer, :correct) %>
  </div>
  <div class="field">
    <div class="control">
      <%= form.submit class: 'button is-link' %>
    </div>
  </div>
<% end %>
